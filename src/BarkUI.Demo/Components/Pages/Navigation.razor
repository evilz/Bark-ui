@page "/navigation"

<PageTitle>Navigation - Bark UI</PageTitle>

<BarkContainer MaxWidth="xl">
    <div style="padding: 2rem 0;">
        <div style="text-align: center; margin-bottom: 3rem;">
            <h1 style="font-size: 2.5rem; font-weight: bold; margin-bottom: 1rem; color: #111827;">Navigation Components</h1>
            <p style="font-size: 1.125rem; color: #6b7280;">
                Components for navigation and page structure
            </p>
        </div>

        <div style="display: flex; flex-direction: column; gap: 3rem;">

            <!-- Link Section -->
            <section>
                <h2 style="font-size: 1.875rem; font-weight: bold; margin-bottom: 1.5rem; color: #111827;">Link</h2>
                <BarkCard>
                    <div style="display: flex; flex-direction: column; gap: 1.5rem;">
                        <div>
                            <h3 style="font-weight: 600; margin-bottom: 1rem;">Variants</h3>
                            <div style="display: flex; gap: 1rem; flex-wrap: wrap; align-items: center;">
                                <BarkLink Href="#" Variant="default">Default Link</BarkLink>
                                <BarkLink Href="#" Variant="muted">Muted Link</BarkLink>
                            </div>
                        </div>

                        <div>
                            <h3 style="font-weight: 600; margin-bottom: 1rem;">Sizes</h3>
                            <div style="display: flex; gap: 1rem; flex-wrap: wrap; align-items: center;">
                                <BarkLink Href="#" Size="sm">Small Link</BarkLink>
                                <BarkLink Href="#" Size="md">Medium Link</BarkLink>
                                <BarkLink Href="#" Size="lg">Large Link</BarkLink>
                            </div>
                        </div>

                        <div>
                            <h3 style="font-weight: 600; margin-bottom: 1rem;">With and Without Underline</h3>
                            <div style="display: flex; gap: 1rem; flex-wrap: wrap; align-items: center;">
                                <BarkLink Href="#" Underline="true">Link with underline</BarkLink>
                                <BarkLink Href="#" Underline="false">Link without underline</BarkLink>
                            </div>
                        </div>

                        <div>
                            <h3 style="font-weight: 600; margin-bottom: 1rem;">External Links</h3>
                            <div style="display: flex; gap: 1rem; flex-wrap: wrap; align-items: center;">
                                <BarkLink Href="https://github.com" Target="_blank">Open in new tab ðŸ”—</BarkLink>
                            </div>
                        </div>
                    </div>
                </BarkCard>
            </section>

            <!-- Pagination Section -->
            <section>
                <h2 style="font-size: 1.875rem; font-weight: bold; margin-bottom: 1.5rem; color: #111827;">Pagination</h2>
                <BarkCard>
                    <div style="display: flex; flex-direction: column; gap: 1.5rem;">
                        <div>
                            <h3 style="font-weight: 600; margin-bottom: 1rem;">Basic Pagination</h3>
                            <BarkPagination @bind-CurrentPage="currentPage1" TotalPages="10" />
                            <p style="margin-top: 0.5rem; color: var(--fg-muted); font-size: 0.875rem;">Current page: @currentPage1</p>
                        </div>

                        <div>
                            <h3 style="font-weight: 600; margin-bottom: 1rem;">With Many Pages</h3>
                            <BarkPagination @bind-CurrentPage="currentPage2" TotalPages="50" MaxVisiblePages="7" />
                            <p style="margin-top: 0.5rem; color: var(--fg-muted); font-size: 0.875rem;">Current page: @currentPage2 of 50</p>
                        </div>

                        <div>
                            <h3 style="font-weight: 600; margin-bottom: 1rem;">Sizes</h3>
                            <div style="display: flex; flex-direction: column; gap: 1rem;">
                                <div>
                                    <p style="font-size: 0.875rem; margin-bottom: 0.5rem;">Small</p>
                                    <BarkPagination @bind-CurrentPage="currentPage3" TotalPages="5" Size="sm" />
                                </div>
                                <div>
                                    <p style="font-size: 0.875rem; margin-bottom: 0.5rem;">Medium</p>
                                    <BarkPagination @bind-CurrentPage="currentPage4" TotalPages="5" Size="md" />
                                </div>
                                <div>
                                    <p style="font-size: 0.875rem; margin-bottom: 0.5rem;">Large</p>
                                    <BarkPagination @bind-CurrentPage="currentPage5" TotalPages="5" Size="lg" />
                                </div>
                            </div>
                        </div>
                    </div>
                </BarkCard>
            </section>

            <!-- Tabs Section -->
            <section>
                <h2 style="font-size: 1.875rem; font-weight: bold; margin-bottom: 1.5rem; color: #111827;">Tabs</h2>
                <BarkCard>
                    <div style="display: flex; flex-direction: column; gap: 1.5rem;">
                        <div>
                            <h3 style="font-weight: 600; margin-bottom: 1rem;">Default Tabs</h3>
                            <CascadingValue Value="tabs1">
                                <BarkTabs @bind-ActiveTabId="activeTab1" Variant="default">
                                    <BarkTab Id="tab1" Title="Profile">
                                        <p style="margin-top: 1rem;">Profile tab content. This is where user profile information would be displayed.</p>
                                    </BarkTab>
                                    <BarkTab Id="tab2" Title="Settings">
                                        <p style="margin-top: 1rem;">Settings tab content. Configure your preferences here.</p>
                                    </BarkTab>
                                    <BarkTab Id="tab3" Title="Notifications">
                                        <p style="margin-top: 1rem;">Notifications tab content. View your recent notifications.</p>
                                    </BarkTab>
                                </BarkTabs>
                            </CascadingValue>
                        </div>

                        <div>
                            <h3 style="font-weight: 600; margin-bottom: 1rem;">Enclosed Tabs</h3>
                            <CascadingValue Value="tabs2">
                                <BarkTabs @bind-ActiveTabId="activeTab2" Variant="enclosed">
                                    <BarkTab Id="overview" Title="Overview">
                                        <p style="margin-top: 1rem;">Overview tab content with enclosed style.</p>
                                    </BarkTab>
                                    <BarkTab Id="details" Title="Details">
                                        <p style="margin-top: 1rem;">Detailed information goes here.</p>
                                    </BarkTab>
                                    <BarkTab Id="analytics" Title="Analytics">
                                        <p style="margin-top: 1rem;">Analytics and reports section.</p>
                                    </BarkTab>
                                </BarkTabs>
                            </CascadingValue>
                        </div>

                        <div>
                            <h3 style="font-weight: 600; margin-bottom: 1rem;">Different Sizes</h3>
                            <CascadingValue Value="tabs3">
                                <BarkTabs @bind-ActiveTabId="activeTab3" Size="sm">
                                    <BarkTab Id="small1" Title="Small">
                                        <p style="margin-top: 1rem;">Small tabs content.</p>
                                    </BarkTab>
                                    <BarkTab Id="small2" Title="Tabs">
                                        <p style="margin-top: 1rem;">With smaller text.</p>
                                    </BarkTab>
                                </BarkTabs>
                            </CascadingValue>
                        </div>
                    </div>
                </BarkCard>
            </section>

        </div>
    </div>
</BarkContainer>

@code {
    // Pagination state
    private int currentPage1 = 1;
    private int currentPage2 = 25;
    private int currentPage3 = 1;
    private int currentPage4 = 1;
    private int currentPage5 = 1;

    // Tabs state
    private BarkTabs? tabs1;
    private BarkTabs? tabs2;
    private BarkTabs? tabs3;
    private string? activeTab1 = "tab1";
    private string? activeTab2 = "overview";
    private string? activeTab3 = "small1";
}
