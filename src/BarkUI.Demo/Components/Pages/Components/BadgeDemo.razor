@page "/components/badge"

<PageTitle>Badge - Bark UI</PageTitle>

<BarkContainer MaxWidth="xl">
    <div style="padding: 2rem 0;">
        <div style="margin-bottom: 3rem;">
            <h1 style="font-size: 2.5rem; font-weight: bold; margin-bottom: 0.5rem; color: #111827;">Badge</h1>
            <p style="font-size: 1.125rem; color: #6b7280;">
                Display status, categories, or labels with various styles.
            </p>
        </div>

        <div style="display: flex; flex-direction: column; gap: 3rem;">

            <!-- Solid Badges Section -->
            <section>
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; color: #111827;">Solid Badges</h2>
                <BarkCard>
                    <div style="display: flex; flex-wrap: wrap; gap: 0.75rem;">
                        <BarkBadge ColorScheme="primary">Primary</BarkBadge>
                        <BarkBadge ColorScheme="secondary">Secondary</BarkBadge>
                        <BarkBadge ColorScheme="success">Success</BarkBadge>
                        <BarkBadge ColorScheme="danger">Danger</BarkBadge>
                        <BarkBadge ColorScheme="warning">Warning</BarkBadge>
                        <BarkBadge ColorScheme="info">Info</BarkBadge>
                    </div>
                </BarkCard>
            </section>

            <!-- Outline Badges Section -->
            <section>
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; color: #111827;">Outline Badges</h2>
                <BarkCard>
                    <div style="display: flex; flex-wrap: wrap; gap: 0.75rem;">
                        <BarkBadge Variant="outline" ColorScheme="primary">Primary</BarkBadge>
                        <BarkBadge Variant="outline" ColorScheme="secondary">Secondary</BarkBadge>
                        <BarkBadge Variant="outline" ColorScheme="success">Success</BarkBadge>
                        <BarkBadge Variant="outline" ColorScheme="danger">Danger</BarkBadge>
                        <BarkBadge Variant="outline" ColorScheme="warning">Warning</BarkBadge>
                        <BarkBadge Variant="outline" ColorScheme="info">Info</BarkBadge>
                    </div>
                </BarkCard>
            </section>

            <!-- Subtle Badges Section -->
            <section>
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; color: #111827;">Subtle Badges</h2>
                <BarkCard>
                    <div style="display: flex; flex-wrap: wrap; gap: 0.75rem;">
                        <BarkBadge Variant="subtle" ColorScheme="primary">Primary</BarkBadge>
                        <BarkBadge Variant="subtle" ColorScheme="secondary">Secondary</BarkBadge>
                        <BarkBadge Variant="subtle" ColorScheme="success">Success</BarkBadge>
                        <BarkBadge Variant="subtle" ColorScheme="danger">Danger</BarkBadge>
                        <BarkBadge Variant="subtle" ColorScheme="warning">Warning</BarkBadge>
                        <BarkBadge Variant="subtle" ColorScheme="info">Info</BarkBadge>
                    </div>
                </BarkCard>
            </section>

            <!-- Sizes Section -->
            <section>
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; color: #111827;">Sizes</h2>
                <BarkCard>
                    <div style="display: flex; flex-wrap: wrap; gap: 0.75rem; align-items: center;">
                        <BarkBadge Size="sm">Small</BarkBadge>
                        <BarkBadge Size="md">Medium</BarkBadge>
                        <BarkBadge Size="lg">Large</BarkBadge>
                    </div>
                </BarkCard>
            </section>

        </div>
    </div>
</BarkContainer>

