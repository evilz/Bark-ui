@page "/components/alert"

<PageTitle>Alert - Bark UI</PageTitle>

<BarkContainer MaxWidth="xl">
    <div style="padding: 2rem 0;">
        <div style="margin-bottom: 3rem;">
            <h1 style="font-size: 2.5rem; font-weight: 600; margin-bottom: 0.5rem; color: #111827;">Alert</h1>
            <p style="font-size: 1.125rem; color: #6b7280;">
                Display important messages to users with different severity levels.
            </p>
        </div>

        <div style="display: flex; flex-direction: column; gap: 3rem;">

            <!-- Variants Section -->
            <section>
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; color: #111827;">Variants</h2>
                <div style="display: flex; flex-direction: column; gap: 1rem;">
                    <BarkAlert Variant="info" Title="Information">
                        This is an informational alert message.
                    </BarkAlert>
                    
                    <BarkAlert Variant="success" Title="Success">
                        Your operation completed successfully!
                    </BarkAlert>
                    
                    <BarkAlert Variant="warning" Title="Warning">
                        Please review this warning carefully.
                    </BarkAlert>
                    
                    <BarkAlert Variant="error" Title="Error">
                        An error occurred. Please try again.
                    </BarkAlert>
                </div>
            </section>

        </div>
    </div>
</BarkContainer>

