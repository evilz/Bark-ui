@page "/components/spinner"

<PageTitle>Spinner - Bark UI</PageTitle>

<BarkContainer MaxWidth="xl">
    <div style="padding: 2rem 0;">
        <div style="margin-bottom: 3rem;">
            <h1 style="font-size: 2.5rem; font-weight: 600; margin-bottom: 0.5rem; color: #111827;">Spinner</h1>
            <p style="font-size: 1.125rem; color: #6b7280;">
                A loading indicator component with customizable size and color.
            </p>
        </div>

        <div style="display: flex; flex-direction: column; gap: 3rem;">

            <!-- Sizes Section -->
            <section>
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; color: #111827;">Sizes</h2>
                <BarkCard>
                    <div style="display: flex; gap: 1.5rem; align-items: center;">
                        <BarkSpinner Size="sm" />
                        <BarkSpinner Size="md" />
                        <BarkSpinner Size="lg" />
                    </div>
                </BarkCard>
            </section>

            <!-- Colors Section -->
            <section>
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; color: #111827;">Colors</h2>
                <BarkCard>
                    <div style="display: flex; gap: 1.5rem; align-items: center;">
                        <BarkSpinner ColorScheme="primary" />
                        <BarkSpinner ColorScheme="secondary" />
                        <BarkSpinner ColorScheme="success" />
                    </div>
                </BarkCard>
            </section>

        </div>
    </div>
</BarkContainer>

