@page "/components/skeleton"

<PageTitle>Skeleton - Bark UI</PageTitle>

<BarkContainer MaxWidth="xl">
    <div style="padding: 2rem 0;">
        <div style="margin-bottom: 3rem;">
            <h1 style="font-size: 2.5rem; font-weight: 600; margin-bottom: 0.5rem; color: #111827;">Skeleton</h1>
            <p style="font-size: 1.125rem; color: #6b7280;">
                Loading placeholder for content.
            </p>
        </div>

        <div style="display: flex; flex-direction: column; gap: 3rem;">

            <!-- Text Skeletons Section -->
            <section>
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; color: #111827;">Text Skeletons</h2>
                <BarkCard>
                    <div style="display: flex; flex-direction: column; gap: 0.5rem;">
                        <BarkSkeleton Variant="text" Width="100%" />
                        <BarkSkeleton Variant="text" Width="80%" />
                        <BarkSkeleton Variant="text" Width="60%" />
                    </div>
                </BarkCard>
            </section>

            <!-- Circle Skeleton Section -->
            <section>
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; color: #111827;">Circle Skeleton</h2>
                <BarkCard>
                    <BarkSkeleton Variant="circle" />
                </BarkCard>
            </section>

            <!-- Rectangle Skeleton Section -->
            <section>
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; color: #111827;">Rectangle Skeleton</h2>
                <BarkCard>
                    <BarkSkeleton Variant="rectangle" Height="8rem" />
                </BarkCard>
            </section>

        </div>
    </div>
</BarkContainer>

