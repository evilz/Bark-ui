@page "/components/progress"

<PageTitle>Progress - Bark UI</PageTitle>

<BarkContainer MaxWidth="xl">
    <div style="padding: 2rem 0;">
        <div style="margin-bottom: 3rem;">
            <h1 style="font-size: 2.5rem; font-weight: 600; margin-bottom: 0.5rem; color: #111827;">Progress</h1>
            <p style="font-size: 1.125rem; color: #6b7280;">
                Visual progress indicator.
            </p>
        </div>

        <div style="display: flex; flex-direction: column; gap: 3rem;">

            <!-- Basic Examples Section -->
            <section>
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; color: #111827;">Basic Examples</h2>
                <BarkCard>
                    <div style="display: flex; flex-direction: column; gap: 1.5rem;">
                        <div>
                            <h3 style="font-weight: 600; margin-bottom: 1rem;">Basic Progress</h3>
                            <BarkProgress Value="45" />
                        </div>

                        <div>
                            <h3 style="font-weight: 600; margin-bottom: 1rem;">With Label</h3>
                            <BarkProgress Value="75" ShowLabel="true" />
                        </div>
                    </div>
                </BarkCard>
            </section>

            <!-- Color Schemes Section -->
            <section>
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; color: #111827;">Color Schemes</h2>
                <BarkCard>
                    <div style="display: flex; flex-direction: column; gap: 1rem;">
                        <BarkProgress Value="60" ColorScheme="primary" ShowLabel="true" />
                        <BarkProgress Value="80" ColorScheme="success" ShowLabel="true" />
                        <BarkProgress Value="40" ColorScheme="danger" ShowLabel="true" />
                    </div>
                </BarkCard>
            </section>

            <!-- Striped & Animated Section -->
            <section>
                <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem; color: #111827;">Striped & Animated</h2>
                <BarkCard>
                    <BarkProgress Value="70" Striped="true" Animated="true" ShowLabel="true" />
                </BarkCard>
            </section>

        </div>
    </div>
</BarkContainer>

