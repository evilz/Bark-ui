@namespace BarkUI.Components

<div class="bark-date-picker-wrapper">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label class="bark-date-picker-label" for="@Id">@Label</label>
    }
    <input 
        id="@Id"
        type="date"
        class="@GetDatePickerClasses()"
        value="@(Value?.ToString("yyyy-MM-dd"))"
        disabled="@Disabled"
        @onchange="HandleChange"
        @attributes="AdditionalAttributes" />
    @if (!string.IsNullOrEmpty(HelperText))
    {
        <span class="bark-date-picker-helper">@HelperText</span>
    }
</div>

@code {
    [Parameter]
    public string? Id { get; set; }

    [Parameter]
    public string? Label { get; set; }

    [Parameter]
    public DateTime? Value { get; set; }

    [Parameter]
    public EventCallback<DateTime?> ValueChanged { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public string Size { get; set; } = "md";

    [Parameter]
    public bool HasError { get; set; }

    [Parameter]
    public string? HelperText { get; set; }

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    protected override void OnInitialized()
    {
        if (string.IsNullOrEmpty(Id))
        {
            Id = $"bark-date-picker-{Guid.NewGuid()}";
        }
    }

    private async Task HandleChange(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            Value = date;
        }
        else
        {
            Value = null;
        }
        await ValueChanged.InvokeAsync(Value);
    }

    private string GetDatePickerClasses()
    {
        var classes = new List<string> { "bark-date-picker" };
        classes.Add($"bark-date-picker--{Size}");
        
        if (HasError)
        {
            classes.Add("bark-date-picker--error");
        }
        
        if (Disabled)
        {
            classes.Add("bark-date-picker--disabled");
        }

        if (AdditionalAttributes?.ContainsKey("class") == true)
        {
            classes.Add(AdditionalAttributes["class"].ToString() ?? string.Empty);
        }

        return string.Join(" ", classes);
    }
}
