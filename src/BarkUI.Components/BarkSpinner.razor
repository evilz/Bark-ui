@namespace BarkUI.Components

<div class="@GetSpinnerClasses()" @attributes="AdditionalAttributes">
    <div class="bark-spinner-circle"></div>
</div>

@code {
    [Parameter]
    public string Size { get; set; } = "md";

    [Parameter]
    public string ColorScheme { get; set; } = "primary";

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private string GetSpinnerClasses()
    {
        var classes = new List<string> { "bark-spinner" };
        classes.Add($"bark-spinner--{Size}");
        classes.Add($"bark-spinner--{ColorScheme}");

        if (AdditionalAttributes?.ContainsKey("class") == true)
        {
            classes.Add(AdditionalAttributes["class"].ToString() ?? string.Empty);
        }

        return string.Join(" ", classes);
    }
}
