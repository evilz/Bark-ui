@namespace BarkUI.Components

<span class="@GetBadgeClasses()" @attributes="AdditionalAttributes">
    @ChildContent
</span>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string Variant { get; set; } = "solid";

    [Parameter]
    public string ColorScheme { get; set; } = "primary";

    [Parameter]
    public string Size { get; set; } = "md";

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private string GetBadgeClasses()
    {
        var classes = new List<string> { "bark-badge" };
        classes.Add($"bark-badge--{Variant}");
        classes.Add($"bark-badge--{ColorScheme}");
        classes.Add($"bark-badge--{Size}");

        if (AdditionalAttributes?.ContainsKey("class") == true)
        {
            classes.Add(AdditionalAttributes["class"].ToString() ?? string.Empty);
        }

        return string.Join(" ", classes);
    }
}
